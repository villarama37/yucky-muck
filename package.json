{
  "name": "hapi-starter-kit",
  "version": "0.0.1",
  "description": "Example Hapi Service",
  "main": "server.js",
  "scripts": {
    "start": "node .",
    "start-dev": "nodemon .",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "@hapi/boom": "^7.4.2",
    "hapi": "^18.1.0",
    "@hapi/joi": "^15.0.3",
    "hapi-swagger": "^9.4.2",
    "inert": "^5.1.0",
    "vision": "^5.4.4"
  },
  "devDependencies": {
    "eslint": "^5.14.1",
    "nodemon": "^1.18.9",
    "jest": "^24.8.0",
    "faker": "^4.1.0",
    "sinon": "^7.3.2",
    "sinon-test": "^2.4.0",
    "git-hooks": "^1.1.10"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/config/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/config/",
      "/src/routes/",
      "/src/models/",
      "/src/lib/",
      "<rootDir>/server.js"
    ]
  }
}
